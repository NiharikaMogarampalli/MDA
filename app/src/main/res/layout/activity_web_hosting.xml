<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebHostingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp">

        
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:background="#17426b">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beginner's Plan"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_below="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Popular"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#ffffff"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/r1"
            android:background="#FFF4EB">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20B9"
                    android:layout_marginRight="6dp"
                    android:layout_gravity="top"
                    android:textSize="25dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:fontFamily="@font/abril_fatface"
                    android:textSize="50dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ANNUALY"
                    android:textStyle="bold"
                    android:layout_gravity="top"
                    android:layout_marginLeft="6dp"
                    android:textSize="14dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/t1"
                android:layout_below="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One-click install"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
               />

            <TextView
                android:id="@+id/t2"
                android:layout_below="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single-domain"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/wrongmark"
                android:drawablePadding="20dp"
                />
            <TextView
                android:id="@+id/t3"
                android:layout_below="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 10 GB Disk Space"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/tickmark"
                android:drawablePadding="20dp"
                />
            <TextView
                android:id="@+id/t4"
                android:layout_below="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 100 GB Transfer"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/tickmark"
                android:drawablePadding="20dp"
                />
            <TextView
                android:id="@+id/t5"
                android:layout_below="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Cpanel"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/tickmark"
                android:drawablePadding="20dp"
                />
            <TextView
                android:id="@+id/t6"
                android:layout_below="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unmetered Bandwidth 10 GB"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/tickmark"
                android:drawablePadding="20dp"
                />

            <TextView
                android:id="@+id/t7"
                android:layout_below="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 Email Account(s)"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/tickmark"
                android:drawablePadding="20dp"
                />


            <TextView
                android:id="@+id/t8"
                android:layout_below="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Sub Domains"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/tickmark"
                android:drawablePadding="20dp"
                />

            <TextView
                android:id="@+id/t9"
                android:layout_below="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free SSL"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/tickmark"
                android:drawablePadding="20dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t9"
                android:layout_margin="35dp"
                android:text="GET STARTED"
                android:background="#17246b"
                android:textColor="#ffffff"/>







        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>